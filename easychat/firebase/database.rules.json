{
  "rules": {
    "mirror-users": {
      ".read": true,
      "$uid": {
        ".write": "$uid === auth.uid",
      },
      ".indexOn": ["createdAt"]
    },
    "fcm-tokens": {
      ".read": true,
      "$token": {
        ".write": "newData.val() === auth.uid",
      },
      ".indexOn": [".value"],
    },
    "fcm-subscriptions": {
      ".read": true,
      "$subscriptionId": {
        "$uid": {
          ".write": "$uid === auth.uid"
        }
      }
    },
    "chat-messages": {
      "$roomId": {
        ".read": true,
        ".write": true
      }
    },
    "test": {
      ".read": true,
      ".write": true
    }
  }
}